    <secttion>
        <div class="chooseYourLanguage">
            <h1 class="heading">Visitor Pass</h1><br><br><br>
            <!-- <p class="sub-heading">Fill Your Details</p><br> -->
            <form action="/register/emp-vis/create" method="POST">

                <label for="fullName"> Full Name :</label>
                <input required type="text" id="fullName" name="fullName" class="textInput"><br><br>

                <label for="contactNo">Contact No. :</label>
                <input required type="tel" name="contact" id="contactNo" class="textInput" oninput="validatePhoneNumber(this)"><br><br>

                <label for="email">Email Id :</label>
                <input required type="email" name="email" id="email" class="textInput" /><br><br>


                <label for="ReasonOfVisit">Reason Of Visit :</label>
                <input required type="text" name="reason" id="ReasonOfVisit" class="textarea" /><br><br>

                <label for="PersonToMeet">Person You Want To Meet :</label>
                <input required type="PersonToMeet" name="meet" id="PersonToMeet" class="textInput" /><br><br>
                <br><br>


                <button class="button" type="reset" style="background-color: white;">Reset</button>
                <a href="pass"><button class="button" type="button"
                        style="background-color: red;">Cancel</button></a>
                <input class="button" type="submit" value="Confirm"
                    style="background-color: rgb(136, 246, 136);"></input>
                <!-- </fieldset> -->
            </form>
            <!-- </div> -->

        </div>
    </secttion>
    <script>
        function validatePhoneNumber(input) {
            // Remove any non-digit characters
            input.value = input.value.replace(/\D/g, '');

            // Limit to 10 digits
            if (input.value.length > 10) {
                input.value = input.value.slice(0, 10);
            }
        }
    </script>
     <script type="text/javascript">
